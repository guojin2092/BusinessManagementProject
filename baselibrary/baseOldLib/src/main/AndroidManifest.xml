        android:theme="@style/AppTheme" >


        <!-- ui >>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>>> -->

        <activity
            android:name="com.infrastructure.ui.SelectPictureActivity"
