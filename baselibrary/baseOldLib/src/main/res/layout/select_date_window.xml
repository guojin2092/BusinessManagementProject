<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llSelectDateWindowBg"
    style="@style/bottom_window_page"
    android:layout_gravity="bottom" >

    <ScrollView
        style="@style/match_wrap"
        android:layout_weight="1"
        android:background="@color/white"
        android:paddingBottom="@dimen/common_item_distance" >

        <LinearLayout style="@style/ll_vertical_match_match" >
        </LinearLayout>
    </ScrollView>

    <View style="@style/divider_horizontal_1px" />

    <LinearLayout
        style="@style/ll_horizontal_match_wrap"
        android:background="@color/white" >

        <TextView
            android:id="@+id/tvSelectDateWindowReturn"
            style="@style/bottom_menu_btn_cancel"
            android:layout_weight="1" />

        <View style="@style/divider_vertical_1px" />

        <TextView
            android:id="@+id/tvSelectDateWindowSave"
            style="@style/bottom_menu_btn_save"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>