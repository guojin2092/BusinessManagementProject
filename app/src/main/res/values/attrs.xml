<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="WheelRecyclerView">
        <attr name="itemHeight" format="dimension" />
        <attr name="selectTextSize" format="dimension" />
        <attr name="unselectTextSize" format="dimension" />
        <attr name="selectTextColor" format="color" />
        <attr name="unselectTextColor" format="color" />
        <attr name="wheelOffset" format="integer" />
        <attr name="dividerWidth" format="dimension" />
        <attr name="dividerHeight" format="dimension" />
        <attr name="dividerColor" format="color" />
    </declare-styleable>

    <declare-styleable name="MyAlertDialog">
        <attr name="android:layout" />
        <attr name="buttonPanelSideLayout" format="reference" />
        <attr name="listLayout" format="reference" />
        <attr name="multiChoiceItemLayout" format="reference" />
        <attr name="singleChoiceItemLayout" format="reference" />
        <attr name="listItemLayout" format="reference" />
        <attr name="showTitle" format="boolean" />
    </declare-styleable>

    <declare-styleable name="MyRecycleListView">
        <attr name="paddingBottomNoButtons" format="dimension" />
        <attr name="paddingTopNoTitle" format="dimension" />
    </declare-styleable>

    <declare-styleable name="MySpinner">
        <attr name="arrowTint" format="color" />
        <attr name="arrowDrawable" format="reference|color" />
        <attr name="backgroundSelector" format="integer" />
        <attr name="hintText" format="string" />
    </declare-styleable>

</resources>