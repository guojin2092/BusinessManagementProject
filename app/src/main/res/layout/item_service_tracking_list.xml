<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_service_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="11-12"
                android:textColor="@color/A606060"
                android:textSize="16sp" />

            <LinearLayout
                android:id="@+id/ll_timer_shaft"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin">

                <View
                    android:id="@+id/top_line"
                    android:layout_width="1dp"
                    android:layout_height="5dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/A586686" />

                <LinearLayout
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <View
                        android:id="@+id/view_gray_top"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/A586686" />

                    <ImageView
                        android:id="@+id/view_circle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/red_circle" />

                    <View
                        android:id="@+id/view_gray_bottom"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@color/A586686" />

                </LinearLayout>

                <View
                    android:id="@+id/bottom_line"
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:background="@color/A586686" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_service_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="55dp"
                    android:text="已下单（订单开始处理）"
                    android:textColor="@color/A606060"
                    android:textSize="12sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/tv_add_tracking"
            style="@style/product_title_blue"
            android:layout_gravity="bottom|right"
            android:drawableLeft="@drawable/iv_add_logo_gray"
            android:drawablePadding="5dp"
            android:text="添加追踪"
            android:textSize="16sp"
            android:visibility="gone" />

    </FrameLayout>


</LinearLayout>